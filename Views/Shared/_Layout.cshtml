<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Bootstrap & Icone -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">

    <!-- Font moderno -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />

    <!-- Stili personalizzati -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplicationCentralino.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
        }

        .sidebar {
            background-color: #0d6efd;
            color: white;
            min-height: 100vh;
            position: fixed;
            width: 250px;
            transition: transform 0.3s ease;
            z-index: 1000;
        }

            .sidebar.collapsed {
                transform: translateX(-250px);
            }

        .sidebar-brand {
            font-weight: 600;
            padding: 1rem;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .sidebar .nav-link {
            color: rgba(255,255,255,0.8);
            padding: 0.75rem 1rem;
            border-radius: 0;
        }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                color: white;
                background-color: rgba(255,255,255,0.1);
            }

        .main-content {
            margin-left: 250px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            transition: margin-left 0.3s ease;
        }

            .main-content.expanded {
                margin-left: 0;
            }

        .top-row {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            justify-content: space-between;
            height: 3.5rem;
            display: flex;
            align-items: center;
            padding-left: 1rem;
        }

        .content {
            flex: 1;
            padding: 1.5rem;
        }

        .sidebar-toggler {
            background-color: transparent;
            border: none;
            color: #0d6efd;
            font-size: 1.25rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
        }

            .sidebar-toggler:hover {
                background-color: rgba(13, 110, 253, 0.1);
            }

        footer.footer {
            font-size: 0.9rem;
            background-color: #f1f1f1;
            margin-left: 0;
        }

        /* Responsive design per sidebar */
        @@media (max-width: 768px) {
            .sidebar

        {
            transform: translateX(-250px);
        }

        .sidebar.show {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="page">
        <!-- Sidebar -->
        <div class="sidebar" id="sidebar">
            <div class="sidebar-brand d-flex align-items-center">
                <i class="bi bi-telephone-fill me-2"></i>
                <span>Centralino</span>
            </div>
            <nav class="nav flex-column">
                <!-- Voce Home -->
                <a class="nav-link" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door-fill me-2"></i>Home
                </a>

                <!-- Voce Registro Chiamate -->
                <a class="nav-link" asp-controller="Chiamate" asp-action="Index">
                    <i class="bi bi-telephone-fill me-2"></i>Registro Chiamate
                </a>

                <!-- Voce Rubrica Contatti -->
                <a class="nav-link" asp-controller="Contatti" asp-action="Index">
                    <i class="bi bi-journal-bookmark-fill me-2"></i>Rubrica
                </a>

                <!-- Voce Gestione Manuale Chiamate -->
                <a class="nav-link" asp-controller="GestioneChiamate" asp-action="Nuova">
                    <i class="bi bi-telephone-plus-fill me-2"></i>Gestione Chiamate
                </a>

                <!-- Voce Privacy -->
                <a class="nav-link" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-fill me-2"></i>Privacy
                </a>

                @* <a class="nav-link" asp-controller="Statistiche" asp-action="Index"> *@
                @*     <i class="bi bi-shield-fill me-2"></i>Statistiche *@
                @* </a> *@
            </nav>

        </div>

        <!-- Button to toggle sidebar on mobile (removed this for all-screen toggle) -->
        <!-- Main content -->
        <div class="main-content">
            <div class="top-row px-4">
                <button class="sidebar-toggler" type="button" id="sidebarToggle">
                    <i class="bi bi-list me-1"></i> Menu
                </button>
                <a href="#" class="text-dark">About</a>
            </div>

            <!-- Contenuto -->
            <div class="content">
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="footer text-center text-muted border-top py-3">
                <div class="container">
                    &copy; 2025 - WebApplicationCentralino - <a asp-controller="Home" asp-action="Privacy" class="text-muted">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <!-- Script -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        // Script per il toggle della sidebar
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.main-content');

            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('expanded');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>